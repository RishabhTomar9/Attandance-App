rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isOwnerRole() {
       let user = getUserData();
       return isAuthenticated() && user.role == "owner";
    }
    
    function isManagerRole() {
       let user = getUserData();
       return isAuthenticated() && (user.role == "manager" || user.role == "owner");
    }

    // USERS: Authenticated can read own, or anyone in same site (for list)
    match /users/{userId} {
      allow read: if isAuthenticated(); // Simplified for listing
      allow write: if request.auth.uid == userId || isOwnerRole();
    }
    
    // SITES
    match /sites/{siteId} {
        allow read: if isAuthenticated();
        allow write: if isOwnerRole();
    }
    
    // INVITES
    match /invites/{inviteId} {
        allow read: if true; 
        allow write: if isAuthenticated();
    }

    // ATTENDANCE SUBCOLLECTION (Phase 7+ Structure)
    // /attendance/{siteId}/records/{recordId}
    match /attendance/{siteId}/records/{recordId} {
        allow read: if isAuthenticated() && (
            resource.data.uid == request.auth.uid || // Own record
            getUserData().siteId == siteId // Same site members
        );
        // Allow client-side clock-in/out for reliability
        allow write: if isAuthenticated() && (
           (request.method == 'create' && request.resource.data.uid == request.auth.uid) ||
           (request.method == 'update' && resource.data.uid == request.auth.uid) ||
           isManagerRole() // Managers can fix records
        );
    }

    // FACE DATA (Secured)
    // Only the user themselves can read/write their own face embedding
    // Cloud Functions (Admin SDK) bypass this, which is good.
    match /faceData/{uid} {
        allow read, write: if request.auth.uid == uid;
    }

    // QR SESSIONS (Replay Protection)
    match /qrSessions/{sessionId} {
        allow read, write: if isAuthenticated(); 
        // Logic handled by Cloud Functions mostly, but this allows client checks if needed.
    }
  }
}
