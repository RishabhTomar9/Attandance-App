rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isOwnerRole() {
        return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "owner";
    }
    function isManagerRole() {
        return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "manager";
    }
    function getMySiteId() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.siteId;
    }
    
    // USERS, SITES, INVITES (Same as before)
    match /users/{userId} {
      allow read: if isOwner(userId) || (isAuthenticated() && resource.data.siteId == getMySiteId());
      allow write: if isOwner(userId) || isOwnerRole();
    }
    match /sites/{siteId} {
        allow create: if isAuthenticated();
        allow read: if isAuthenticated();
        allow update: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    match /invites/{inviteId} {
        allow read: if true; 
        allow create, update: if isAuthenticated();
    }
    match /attendance/{attendanceId} {
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid && request.resource.data.siteId == getMySiteId();
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
        allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || ((isOwnerRole() || isManagerRole()) && resource.data.siteId == getMySiteId()));
    }
    
    // NEW: Secure QR Tokens (High security without Cloud Functions)
    match /qr_tokens/{tokenId} {
        // Create: User can create a token for themselves
        allow create: if isAuthenticated() 
                   && request.resource.data.uid == request.auth.uid
                   && request.resource.data.siteId == getMySiteId();
                   
        // Update: Only Managers/Owners of the SAME SITE can mark as 'used'
        // This simulates the "Verify Scanner" logic.
        allow update: if isAuthenticated() 
                   && (isOwnerRole() || isManagerRole())
                   && resource.data.siteId == getMySiteId()
                   && request.resource.data.status == "used";
                   
        // Read: The creator (to display) AND Managers (to verify)
        // No public read!
        allow read: if isAuthenticated() && (
            resource.data.uid == request.auth.uid || 
            ((isOwnerRole() || isManagerRole()) && resource.data.siteId == getMySiteId())
        );
    }
  }
}
